@model IEnumerable<Jogador>

<div class="container">
    <div class="d-flex justify-content-between align-items-center mb-5">
        <h1>Jogadores</h1>
        <a class="btn btn-success mx-2" asp-controller="Jogador" asp-action="Cadastrar" > Cadastrar novos jogadores</a>
    </div>
<table class="table table-striped table-dark">
    <thead>
        <tr>
            <th scope="col">ID</th>
            <th scope="col">Nome Jogador</th>
            <th scope="col">Time Jogador</th>
            <th scope="col">Camisa Jogador</th>
            <th scope="col">Hora do jogo</th>
            <th scope="col">O que deseja fazer?</th>
            
        </tr>
    </thead>

    <tbody>
        @if(Model != null)
        {
            @foreach(var jogador in Model)
            {
                <tr>
                    <th scope="row">@jogador.Id</th>
                    <th scope="row">@jogador.NomeJogador</th>
                    <td>@jogador.TimeJogador</td>
                    <td>@jogador.CamisaJogador</td>
                    <td>@jogador.HoraJogo</td>
                    <td>
                        <a asp-controller="Jogador" asp-action="Editar" asp-route-id="@jogador.Id" class="btn btn-warning mx-2">Editar</a>
                        <a asp-controller="Jogador" asp-action="Excluir" asp-route-id="@jogador.Id" class="btn btn-danger mx-2">Excluir</a>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>
</div>
